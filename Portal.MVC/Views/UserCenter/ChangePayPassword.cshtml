@{
    ViewBag.Title = "修改支付密码";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .szzhbtn{position: static;margin: 2rem auto;}
    .zlbl{width: 100%;margin-bottom: .5rem;}
</style>
<div id="changepaypwd" class="page">
    @Html.Partial("m_header")
    <div class="content">
        <div class="zlbl tjbl">
            <span>原密码：</span>
            <input id="oldpwd" type="password">
        </div>
        <div class="zlbl tjbl">
            <span>新密码：</span>
            <input id="newpwd" type="password" placeholder="6-16个字符，区分大小写">
        </div>
        <div class="zlbl tjbl">
            <span>确认密码：</span>
            <input id="compwd" type="password" placeholder="6-16个字符，区分大小写">
        </div>
        <div style="padding: 0 3%;font-size: small"><a href="@Url.Action("ForgetPayPassword")">忘记支付密码</a></div>
        <div style="text-align: center">
            <input type="button" class="szbtn szzhbtn tjbtn1" id="changepaypwdbt" value="确认">
        </div>
    </div>
</div>
