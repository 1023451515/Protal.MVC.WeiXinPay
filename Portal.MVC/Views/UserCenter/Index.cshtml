                </a>
                <a href="@Url.Action("List")" class="wdblock">
                    <img src="/v2/imgs/bills.png" />
                    <span>我的账单</span>
                </a>
                <a href="@Url.Action("MyQuestions")" class="wdblock">
                    <img src="/v2/imgs/myqs.png">
                    <span>我的谜题</span>
                </a>
                <a href="@Url.Action("ConnectService")" class="wdblock">
                    <img src="/v2/imgs/cs.png">
                    <span>联系客服</span>
                </a>
                <a href="@Url.Action("Detail")" class="wdblock">
                    <img src="/v2/imgs/bm.png">
                    <span>手机捆绑</span>
                </a>
                <a href="@Url.Action("SetPayPassword")" class="wdblock wdico1">
                    <img src="/v2/imgs/pwdset.png">
                    <span>支付密码</span>
                </a>
                @*<a href="@Url.Action("MyWallet")" class="wdblock">
                    <img src="/images/wdqb.png">
                    <span>我的钱包</span>
                </a>*@
                @*<a href="@Url.Action("Set")" class="wdblock wdico1">
                    <img src="/images/wdsz.png">
