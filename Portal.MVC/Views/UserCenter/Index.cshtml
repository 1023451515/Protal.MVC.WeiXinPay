@{
    ViewBag.Title = "好油菜·我的钱包";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Niqiu.Core.Domain.User.User
<style>
    .wdtopbl .row, .wdtopbl .row .col-50 {
        overflow: auto;height: 3rem;
    }
</style>
<div id="usercenter" class="page">
    @Html.Partial("m_header")
    @Html.Partial("m_footer")
    
    <div class="content">
        <div class="wdcontent">
            <div class="wdtop">
                <img src="@Model.ImgUrl">
                <p>@Model.Username</p>
                <a>钱包余额</a>
                <div>@(ViewBag.Wallet.Balance)元</div>
            </div>

            <div class="wdbox">
                <a href="@Url.Action("ToCash")" class="wdblock">
                    <img src="/v2/imgs/tocash.png"/>
