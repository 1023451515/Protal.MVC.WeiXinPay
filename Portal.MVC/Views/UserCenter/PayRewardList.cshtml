@{
    ViewBag.Title = "悬赏被领取记录";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Niqiu.Core.Helpers
@model IEnumerable<Niqiu.Core.Domain.Payments.PaymentLog>
<div class="page">
    @Html.Partial("m_header")
    <div class="content">
        <div class="list-block">
            <ul>
                @foreach (var item in Model)
                {
                    <li class="item-content">
                        <div class="item-media"><i class="icon icon-f7"></i></div>
                        <div class="item-inner">
                            <div class="item-title">
                                <div>@CommonHelper.SimpleDate(item.CreateTime)</div>
                                <div>@item.CreateTime.ToShortTimeString()</div>
                            </div>
                            <div>被领取</div>
                            <div>@item.Amount.ToString("C")</div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>